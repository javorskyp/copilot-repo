#!/usr/bin/env bash
# Shim for MCP `local-dotnet` command.
# If `dotnet` exists, forward the call. Otherwise print a helpful message and exit 0.

if command -v dotnet >/dev/null 2>&1; then
  exec dotnet "$@"
else
  echo "[local-dotnet shim] dotnet is not installed or not in PATH. This is a stub shim for MCP."
  exit 0
fi
